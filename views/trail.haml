.main-section
  .block.small.left
    .block_head
      %h2 #{@trail.name.capitalize} 
    .block_content
      %ul#listing.list-view.clearfix
        - @trail.points.each do |point| #- point.photos.each do |photo|
          - if point.category.name != "Trail"
            %li.clearfix
              %a.button.button-gray.delete{:href => "/point/delete/#{point.id}"} 
                %span.bin
              %a.button.button-gray{:href => "#"} 
                %span.pencil
              %a.more{:href => "#point_#{point.id}"} >
              %a.name{:href => "#"} #{point.title}
  .preview-pane.small.right.omega
    .content
      .message.info
        %h3 Helpful Tips
        %p Click on the trail points located on the left to get more information about them, including pictures and coordinates. 
    .preview
      .desc{:style => "display: block !important"}
        %span.close
          %img{:src => "../images/cancel-white.png"}
      - @trail.points.each do |point|
        .desc{:id => "point_#{point.id}"}
          %h1 #{point.title}
          %span #{point.lat}, #{point.long}
          .content
            %p #{point.desc}
            .slideshow
              - point.photos.each do |photo|
                %img{:src => photo.pic.url}