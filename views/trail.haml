%html
  %head
    %meta{:content => "text/html; charset=ISO-8859-1", "http-equiv" => "Content-Type"}
      %title Trail Points
      %link{:href => "css/style.css", :media => "screen", :rel => "stylesheet"}/
  %body
    %h1= "Points for #{@trail.name.capitalize}"
    %br
    - @trail.points.each do |point|
      = "Title: #{point.title}"
      %br
      = "Description: #{point.desc}"
      %br
      = "Category: #{point.category.name}"
      %br
      = "Condition: #{point.condition.desc}"
      %br
      = "Located at #{point.lat}, #{point.long}"
      %br
      %br
