!!! 5
%html{:lang => "en"}
  %head
    %meta{:content => "text/html; charset=ISO-8859-1", "http-equiv" => "Content-Type"}
      %title LC Trails - Admin
      %link{:href => "#{@server_dir}/css/reset.css", :media => "screen", :rel => "stylesheet"}/
      %link{:href => "#{@server_dir}/css/style.css", :media => "screen", :rel => "stylesheet"}/
      /[if lt IE 9]
        %script{:src => "#{@server_dir}/js/html5.js"}
        %script{:src => "#{@server_dir}/js/PIE.js"}
      %script{:src => "#{@server_dir}/js/jquery.tools.min.js"}
      %script{:src => "#{@server_dir}/js/jquery.ui.min.js"}
      /[if lte IE 9]
        %link{:href => "#{@server_dir}/css/ie.css", :media => "screen", :rel => "stylesheet"}/
        %script{:src => "#{@server_dir}/js/ie.js"}
      %script{:src => "#{@server_dir}/js/global.js"}
  %body 
    #bg
      .wrapper
        #header
          %h1
            %img{:alt => "LC Trails", :src => "../images/icon.png"}/
            %a{:href => "/"} LC Trails
          %ul#nav
            %li
              %a{:href => "#"} Dashboard
            %li
              %a{:href => "/trails"} Trails
              %ul
                %li
                  %a{:href => "/trails"} List trails
                %li
                  %a{:href => "/trail/add"} Add trail
            %li
              %a{:href => "#"} Points
              %ul
                %li
                  %a{:href => "/point/add"} Add point
            %li
              %a{:href => "/problems"} Problems
            %li
              %a{:href => "/users"} Users
          %p.user
            %a.logout{:href => "/"} Logout
        
        = yield
        
        #footer
          %p.right
            powered by
            %a{:href => "http://github.com/Mobile-Trail-Mapping/"} Mobile Trail Mapping
