.main-section
  .block.small.left
    .block-head
      %h2 Problems
    .block-content
      %ul#listing.list-view.clearfix.problem
        - @problems.each do |prob|
          %li.clearfix
            .tools
              %a.button.button-gray.delete{:href => "/problem/delete/#{prob.id}"} 
                %span.bin
            %a.more{:href => "#prob_#{prob.id}"} >
            %a.name{:href => "#"} 
              #{prob.title}
              %small{prob.desc}
  .preview-pane.small.right.omega
    .help
      .message.info
        %h3 Helpful Tips
        %p Click on the problems located on the left to get more information about them, including pictures and coordinates. 
    .preview
      .trail-pane{:style => "display: block !important"}
        %span.close
          %img{:src => "../images/cancel-white.png"}
        .trail-content
          .desc
            %h1#trail-name Title
            %span#trail-coords Lat, Long
            .content
              %p#trail-desc Desc
              %ul#slider